<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.F1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_astonMartin</item>
        <item name="colorPrimaryVariant">@color/verde_astonMartin</item>
        <item name="colorOnPrimary">@color/blanco_amarillento</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blanco_amarillento</item>
        <item name="colorSecondaryVariant">@color/amarillo_noseleccionado</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/verde_astonMartin</item>
    </style>
    <style name="Theme.F1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.F1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.F1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>